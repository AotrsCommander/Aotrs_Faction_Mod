<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <FactionDef ParentName="PirateBandBase">
    <defName>Aotrs_SkeletonHorde</defName>
    <label>Skeleton Horde</label>
    <fixedName>Skeleton Horde</fixedName>
    <leaderTitle>host leader</leaderTitle>   
	<description>A horde of wandering uncontrolled skeletons and zombies.</description>
    <colorSpectrum>
      <li>(0.8, 0.1, 0.3)</li>
      <li>(1.0, 0.2, 0.4)</li>
    </colorSpectrum>
    <techLevel>Industrial</techLevel>
    <pawnsPlural>undead</pawnsPlural>
    <canStageAttacks>true</canStageAttacks>
	<factionIconPath>FactionIcons/VU_UndeadHorde</factionIconPath>
    <autoFlee>false</autoFlee>
    <allowedCultures Inherit="False"><li>Astropolitan</li></allowedCultures>
    <allowedMemes Inherit="False">
      <li MayRequire="Ludeon.RimWorld.Ideology">Cannibal</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">Raider</li>
    </allowedMemes>

    <disallowedRaidStrategies>
      <li>ImmediateAttackSappers</li>
      <li>ImmediateAttackBreaching</li>
      <li>ImmediateAttackBreachingSmart</li>
      <li>ImmediateAttackSmart</li>
      <li>Siege</li>
    </disallowedRaidStrategies>
    <!-- <requiredMemes>
    </requiredMemes> -->
    <permanentEnemy>true</permanentEnemy>
    <maxConfigurableAtWorldCreation>9999</maxConfigurableAtWorldCreation>
    <configurationListOrderPriority>20</configurationListOrderPriority>
    <startingCountAtWorldCreation>1</startingCountAtWorldCreation>
    <canSiege>false</canSiege>
	<xenotypeSet Inherit="False">
      <xenotypeChances>
        <Aotrs_AniSkel>0.65</Aotrs_AniSkel>
	    <Aotrs_Lich>0.02</Aotrs_Lich>	
        <VU_Ghoul MayRequire="redmattis.undead">0.05</VU_Ghoul>
		</xenotypeChances>
      <warnIfTotalAbove1>false</warnIfTotalAbove1>
	</xenotypeSet>
    <maxPawnCostPerTotalPointsCurve Inherit="False">
      <points>
        <li>(500, 150)</li> <!-- Can always use relatively strong pawns, because giants doesn't really have weak ones -->
        <li>(2000, 250)</li>
        <li>(2001, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>

    <pawnGroupMakers Inherit="False">
      <!-- Just simple undead -->
      <li>
        <kindDef>Combat</kindDef>
        <commonality>40</commonality>
        <options>
          <Aotrs_SkeleHostWarrior>1</Aotrs_SkeleHostWarrior>
        </options>
      </li>

      <!-- Basic undead + a few leaders -->
      <li>
        <kindDef>Combat</kindDef>
        <commonality>10</commonality>
        <options>
          <Aotrs_SkeleHostWarrior>5</Aotrs_SkeleHostWarrior>
          <Aotrs_SkeleChamp>1</Aotrs_SkeleChamp>
        </options>
      </li>

      <!-- Horde of undead soldiers -->
      <li>
        <kindDef>Combat</kindDef>
        <commonality>10</commonality>
        <options>
          <Aotrs_SkeletalWarrior>1</Aotrs_SkeletalWarrior>
        </options>
      </li>
      
      <!-- Undead company of soldiers-->
      <li>
        <kindDef>Combat</kindDef>
        <commonality>10</commonality>
        <options>
          <Aotrs_SkeleSoldier>1</Aotrs_SkeleSoldier>
        </options>
      </li>

      <!-- Undead company of soldiers with a leader-->
      <li>
        <kindDef>Combat</kindDef>
        <commonality>10</commonality>
        <options>
          <Aotrs_SkeleSoldier>5</Aotrs_SkeleSoldier>
          <Aotrs_SkeleSerge>1</Aotrs_SkeleSerge>
        </options>
      </li>

      <!-- Lots of leaders -->
      <li>
        <kindDef>Combat</kindDef>
        <commonality>10</commonality>
        <options>
          <Aotrs_SkeleHostWarrior>2</Aotrs_SkeleHostWarrior>
          <Aotrs_SkeletalWarrior>2</Aotrs_SkeletalWarrior>
          <Aotrs_SkeleSoldier>2</Aotrs_SkeleSoldier>
          <Aotrs_SkeleChamp>5</Aotrs_SkeleChamp>
          <Aotrs_SkeleMaster>1</Aotrs_SkeleMaster>
        </options>
      </li>

      <!-- Mixed and a few leaders -->
      <li>
        <kindDef>Combat</kindDef>
        <commonality>10</commonality>
        <options>
          <Aotrs_SkeleHostWarrior>10</Aotrs_SkeleHostWarrior>
          <Aotrs_SkeletalWarrior>10</Aotrs_SkeletalWarrior>
          <Aotrs_SkeleSoldier>10</Aotrs_SkeleSoldier>
          <Aotrs_SkeleChamp>5</Aotrs_SkeleChamp>
          <Aotrs_SkeleMaster>1</Aotrs_SkeleMaster>
        </options>
      </li>

      <li>
        <!-- Lots of leaders -->
        <kindDef>Combat</kindDef>
        <commonality>10</commonality>
        <options>
          <Aotrs_SkeleHostWarrior>2</Aotrs_SkeleHostWarrior>
          <Aotrs_SkeletalWarrior>2</Aotrs_SkeletalWarrior>
          <Aotrs_SkeleSoldier>2</Aotrs_SkeleSoldier>
          <Aotrs_SkeleChamp>5</Aotrs_SkeleChamp>
          <Aotrs_SkeleMaster>1</Aotrs_SkeleMaster>
        </options>
      </li>
      <li>
        <!-- Only leaders -->
        <kindDef>Combat</kindDef>
        <commonality>10</commonality>
        <options>
          <Aotrs_SkeleChamp>10</Aotrs_SkeleChamp>
          <Aotrs_SkeleMaster>1</Aotrs_SkeleMaster>
        </options>
      </li>

      <li>
        <!-- Peaceful -->
        <kindDef>Peaceful</kindDef>
        <options>
          <Aotrs_SkeleHostWarrior>8</Aotrs_SkeleHostWarrior>
          <Aotrs_SkeleChamp>4</Aotrs_SkeleChamp>
          <Aotrs_SkeleMaster>1</Aotrs_SkeleMaster>
        </options>
      </li>
      <!-- In case a mod spawns them...-->
      <li>
        <kindDef>Trader</kindDef>
        <traders>
          <Tribal_Trader>1</Tribal_Trader>
        </traders>
        <carriers>
          <Muffalo>6</Muffalo>
          <Dromedary>5</Dromedary>
          <Alpaca>2.5</Alpaca>
          <Elephant>2</Elephant>
        </carriers>
        <guards>
          <Aotrs_SkeleHostWarrior>7</Aotrs_SkeleHostWarrior>
          <Aotrs_SkeleChamp>7</Aotrs_SkeleChamp>
        </guards>
      </li>
      <li>
        <kindDef>Settlement</kindDef>
        <options>
          <Aotrs_SkeleHostWarrior>7</Aotrs_SkeleHostWarrior>
          <Aotrs_SkeleChamp>7</Aotrs_SkeleChamp>
          <Aotrs_SkeleMaster>5</Aotrs_SkeleMaster>
        </options>
      </li>
      <li MayRequire="Ludeon.RimWorld.Ideology">
        <kindDef>Miners</kindDef>
        <commonality>1</commonality>
        <options>
          <Tribal_Miner>1</Tribal_Miner>
        </options>
      </li>
    </pawnGroupMakers>
    <modExtensions>
      <li Class="BigAndSmall.Factions">
        <canUseDropPods>false</canUseDropPods>
      </li>
    </modExtensions>
  </FactionDef>
</Defs>